{
  "Resources": {
    "EC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-01720b5f421cf0179",
        "KeyName": "new2jorgeawstest",
        "InstanceType" : "t2.micro",
        "InstanceInitiatedShutdownBehavior": "terminate",
        "UserData": { "Fn::Base64" : { "Fn::Join" : ["", [
          "#!/bin/bash -xe\n",
          "wget http://fenixservices.fao.org/faostat/static/bulkdownloads/FAOSTAT.zip\n",
          "# Copy file to S3\n",
          "aws s3 cp FAOSTAT.zip s3://testingaws-faostat/inputdata/zip/FAOSTAT.zip\n"
        ]]}}
      }
    },
    "TAWSEC2Role":{
      "Type" : "AWS::IAM::Role",
      "Properties": {
        "RoleName": "testingaws_ec2role",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "s3.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/"
      }
    }
  }
}
