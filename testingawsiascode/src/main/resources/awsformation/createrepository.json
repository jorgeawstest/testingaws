{
  "Resources": {
    "CodeCommit": {
      "Type": "AWS::CodeCommit::Repository",
      "Properties": {
        "RepositoryName": "s3titanic",
        "RepositoryDescription": "This is a repository for my projectt"
      }
    },
    "CodePipeline": {
      "Type": "AWS::CodePipeline::Pipeline",
      "Properties": {
        "Name": "testingaws-codepipeline",
        "ArtifactStore": {
          "Location": "testingaws-faostat",
          "Type": "S3"
        },
        "RoleArn": {
          "Fn::GetAtt": [
            "TAWSCodePipelineRole",
            "Arn"
          ]
        },
        "RestartExecutionOnUpdate": true,
        "Stages": [
          {
            "Name": "Source",
            "Actions": [
              {
                "Name": "SourceAction",
                "ActionTypeId": {
                  "Category": "Source",
                  "Owner": "AWS",
                  "Version": "1",
                  "Provider": "CodeCommit"
                },
                "OutputArtifacts": [
                  {
                    "Name": "appsource"
                  }
                ],
                "Configuration": {
                  "BranchName": "main",
                  "PollForSourceChanges": "false",
                  "RepositoryName": "s3titanic"
                },
                "RunOrder": 1
              }
            ]
          },
          {
            "Name": "Build",
            "Actions": [
              {
                "Name": "BuildMvn",
                "ActionTypeId": {
                  "Category": "Build",
                  "Owner": "AWS",
                  "Version": "1",
                  "Provider": "CodeBuild"
                },
                "InputArtifacts": [
                  {
                    "Name": "appsource"
                  }
                ],
                "OutputArtifacts": [
                  {
                    "Name": "appbuilt"
                  }
                ],
                "Configuration": {
                  "ProjectName": "testingaws-codebuild"
                }
              }
            ]
          },
          {
            "Name": "Deploy",
            "Actions":[
              {
                "Name": "DeployFAO",
                "ActionTypeId": {
                  "Category": "Deploy",
                  "Owner": "AWS",
                  "Version": "1",
                  "Provider": "CloudFormation"
                },
                "InputArtifacts": [
                  {
                    "Name": "appbuilt"
                  }
                ],
                "Configuration": {
                  "ActionMode": "CREATE_UPDATE",
                  "RoleArn" : {
                    "Fn::GetAtt": [
                      "TAWSAWSCloudFormationRole",
                      "Arn"
                    ]
                  },
                  "Capabilities": "CAPABILITY_IAM,CAPABILITY_AUTO_EXPAND",
                  "StackName" : "FAO-pipeline-stack",
                  "TemplatePath" : "appbuilt::faostepMachine.json"

                }
              }
            ]

          }
        ]
      }
    },
    "CodeBuild": {
      "Type": "AWS::CodeBuild::Project",
      "Properties": {
        "Name": "testingaws-codebuild",
        "Description": "TestingAWS",
        "ServiceRole": {
          "Fn::GetAtt": [
            "TAWSCodeBuildRole",
            "Arn"
          ]
        },
        "Artifacts": {
          "Type": "no_artifacts"
        },
        "Environment": {
          "Type": "LINUX_CONTAINER",
          "ComputeType": "BUILD_GENERAL1_SMALL",
          "Image": "aws/codebuild/java:openjdk-8"
        },
        "Source": {
          "Location": "https://git-codecommit.eu-west-1.amazonaws.com/v1/repos/s3titanic",
          "Type": "CODECOMMIT"
        },
        "TimeoutInMinutes": 10
      }
    },
    "TAWSCodeBuildRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "testingaws_role_codebuild",
        "Path": "/",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "codebuild.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "ManagedPolicyArns": [ "arn:aws:iam::aws:policy/AmazonElasticMapReduceFullAccess" ],
        "Policies": [
          {
            "PolicyName": "TAWS-CodebuildRolePolicynew",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "codecommit:CancelUploadArchive",
                    "codecommit:GetBranch",
                    "codecommit:GetCommit",
                    "codecommit:GetUploadArchiveStatus",
                    "codecommit:UploadArchive"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "codedeploy:CreateDeployment",
                    "codedeploy:GetApplicationRevision",
                    "codedeploy:GetDeployment",
                    "codedeploy:GetDeploymentConfig",
                    "codedeploy:RegisterApplicationRevision"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "codebuild:BatchGetBuilds",
                    "codebuild:StartBuild"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "lambda:InvokeFunction",
                    "lambda:ListFunctions"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "iam:PassRole"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "elasticbeanstalk:*",
                    "ec2:*",
                    "elasticloadbalancing:*",
                    "autoscaling:*",
                    "cloudwatch:*",
                    "s3:*",
                    "sns:*",
                    "cloudformation:*",
                    "rds:*",
                    "sqs:*",
                    "ecs:*",
                    "logs:*",
                    "elasticmapreduce:*"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "TAWSCodePipelineRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "testingaws_role_codepipeline",
        "Path": "/",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "codepipeline.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "TAWS-CodePipeline-Service-3",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "codecommit:CancelUploadArchive",
                    "codecommit:GetBranch",
                    "codecommit:GetCommit",
                    "codecommit:GetUploadArchiveStatus",
                    "codecommit:UploadArchive"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "codedeploy:CreateDeployment",
                    "codedeploy:GetApplicationRevision",
                    "codedeploy:GetDeployment",
                    "codedeploy:GetDeploymentConfig",
                    "codedeploy:RegisterApplicationRevision"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "codebuild:BatchGetBuilds",
                    "codebuild:StartBuild"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "lambda:InvokeFunction",
                    "lambda:ListFunctions"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "iam:PassRole"
                  ],
                  "Resource": "*"
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "elasticbeanstalk:*",
                    "ec2:*",
                    "elasticloadbalancing:*",
                    "autoscaling:*",
                    "cloudwatch:*",
                    "s3:*",
                    "sns:*",
                    "cloudformation:*",
                    "rds:*",
                    "sqs:*",
                    "ecs:*",
                    "elasticmapreduce:*"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "TAWSAWSCloudWatchEventRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "TAWSAWSCloudWatchEventRole",
        "Path": "/",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "events.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "TAWSAWSCloudWatchEventRolePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "codepipeline:StartPipelineExecution"
                  ],
                  "Resource": [
                    {
                      "Fn::Join": [
                        "",
                        [
                          "arn:aws:codepipeline:",
                          {
                            "Ref": "AWS::Region"
                          },
                          ":",
                          {
                            "Ref": "AWS::AccountId"
                          },
                          ":",
                          {
                            "Ref": "CodePipeline"
                          }
                        ]
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "TAWSAWSCloudFormationRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "TAWSAWSCloudFormationRole",
        "Path": "/",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "cloudformation.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "TAWSAWSCloudFormationRolePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "iam:CreateRole",
                    "iam:DeleteRole",
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "TAWSCodePipelineRule": {
      "Type": "AWS::Events::Rule",
      "Properties": {
        "Description": "CodeCommit update pipeline",
        "Name": "TAWS-CodepipelineRule",
        "EventPattern": {
          "source": [
            "aws.codecommit"
          ],
          "detail-type": [
            "CodeCommit Repository State Change"
          ],
          "resources": [
            {
              "Fn::Join": [
                "",
                [
                  "arn:aws:codecommit:",
                  {
                    "Ref": "AWS::Region"
                  },
                  ":",
                  {
                    "Ref": "AWS::AccountId"
                  },
                  ":",
                  "s3titanic"
                ]
              ]
            }
          ],
          "detail": {
            "event": [
              "referenceCreated",
              "referenceUpdated"
            ],
            "referenceType": [
              "branch"
            ],
            "referenceName": [
              "main"
            ]
          }
        },
        "State": "ENABLED",
        "Targets": [
          {
            "Arn": {
              "Fn::Join": [
                "",
                [
                  "arn:aws:codepipeline:",
                  {
                    "Ref": "AWS::Region"
                  },
                  ":",
                  {
                    "Ref": "AWS::AccountId"
                  },
                  ":",
                  "testingaws-codepipeline"
                ]
              ]
            },
            "Id": "codepipeline-pipeline",
            "RoleArn": {
              "Fn::GetAtt": [
                "TAWSAWSCloudWatchEventRole",
                "Arn"
              ]
            }
          }
        ]
      }
    }
  }
}
